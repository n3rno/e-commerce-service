<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="kr.hhplus.be.server.user.infrastructure.persistence.mapper.UserMapper">

    <!-- 존재하는 유저인지 확인 -->
    <select id="countUserByUserNo" parameterType="int" resultType="int">
        SELECT COUNT(*) as count FROM users WHERE no = #{userNo}
    </select>

</mapper>
